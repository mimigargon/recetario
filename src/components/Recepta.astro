---
const { nom, foto, descripcio, Id } = Astro.props.dades;
let idioma = Astro.cookies.get("idioma").value;

//console.log(descripcio)
---

<div class="border mt-5 mb-8 p-8 bg-white w-96 h-fit rounded-xl">
    <h1 class="text-xl font-bold text-center uppercase text-rose-900 mb-5">
        {nom}
    </h1>

    <img class="rounded-xl w-2/3 m-auto" src={foto} alt="" />
    <hr class="my-4" />
    {
        descripcio
            ?.replace(/\n/g, "*n*")
            .split("*n*")
            .map((e) => <p class="mb-5 ">{e}</p>)
    }

    <div class="flex justify-between">
        <a
            class="text-white bg-rose-800 hover:bg-rose-900 focus:ring-4 focus:ring-rose-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-rose-600 dark:hover:bg-rose-700 focus:outline-none dark:focus:ring-rose-800"
            href={"/receptes/eliminar/" + Id}
            >{idioma === "ca" ? "Esborrar" : "Eliminar"}</a
        >
        <a
            class="text-white bg-purple-800 hover:bg-purple-900 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-purple-600 dark:hover:bg-purple-700 focus:outline-none dark:focus:ring-purple-800"
            href={"/receptes/modificar/" + Id}
            >{idioma === "ca" ? "Modificar" : "Modificar"}
        </a>
    </div>
</div>
